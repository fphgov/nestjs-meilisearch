{
	"name": "nestjs-meilisearch",
	"version": "2.0.2",
	"description": "Meilisearch integration for nestjs.",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"scripts": {
		"build": "rimraf lib && tsc -p tsconfig.build.json",
		"format": "prettier --write '**/*.md' '**/*.json' '**/*.ts' '**/*.yml' .prettierrc",
		"test": "jest"
	},
	"files": [
		"lib"
	],
	"repository": "https://github.com/lambrohan/nestjs-meilisearch",
	"keywords": [
		"nestjs",
		"meilisearch"
	],
	"author": {
		"name": "Rohan Lamb",
		"url": "https://github.com/lambrohan"
	},
	"license": "MIT",
	"private": false,
	"dependencies": {
		"@nestjs/common": "^7.6.15",
		"meilisearch": "^0.18.1",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^6.6.7"
	},
	"devDependencies": {
		"@nestjs/core": "^7.6.15",
		"@nestjs/testing": "^7.6.7",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.22",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"codecov": "^3.8.1",
		"eslint": "^7.18.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"supertest": "^6.1.3",
		"ts-jest": "^26.4.4",
		"ts-loader": "^8.0.14",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/$1"
		}
	}
}
